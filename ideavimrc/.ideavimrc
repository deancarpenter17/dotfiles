""" Map leader to space ---------------------
let mapleader=" "

""" VIM Shortcuts
" Relative line number
set rnu

" Incremental Search
set incsearch

" Scroll offset
set scrolloff=5

" Get clipboard to work with system clipboard
set clipboard^=unnamedplus
set clipboard^=ideaput
set clipboard^=ideaget

" disable the timeout option
set notimeout

" Enables the which key popup window
set which-key

" Increase the timeoutlen (default: 1000), don't add space around the equal sign
set timeoutlen=5000

" Highlights current search
set hlsearch

" Ignores case when searching
set ignorecase

" Case-insensitive unless you type an uppercase letter
set smartcase

""" Editor Actions
map <leader>b <Action>(ToggleLineBreakpoint)
map <leader>c <Action>(VcsShowNextChangeMarker)
map <leader>C <Action>(VcsShowPrevChangeMarker)
map <leader>e <Action>(GotoNextError)
map <leader>E <Action>(GotoPreviousError)
map <leader>g <Action>(Gradle.ExecuteTask)
map <leader>i <Action>(ShowHoverInfo)
map <leader>h <Action>(Vcs.ShowTabbedFileHistory)
map <leader>z <Action>(Vcs.RollbackChangedLines)
map <leader>u <Action>(ShowUsages)
map <leader>U <Action>(FindUsages)

nmap <leader>x <Action>(HideAllWindows)

" Delete motions -- Don't save to clipboard
nnoremap d "_d
nnoremap x "_x

""" Ideavim Plugins
Plug 'machakann/vim-highlightedyank'
Plug 'tpope/vim-commentary'
Plug 'vim-scripts/argtextobj.vim'


